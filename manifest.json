{
	"manifest_version": 2,

	"name": "Scraper Utiity",
	"description": "This extension extracts websites' data and pipes it to a database",
	"version": "0.0.1",

	"browser_action":{
		"default_icon": "icon.png"
	},
	"permissions": [
		"activeTab"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/jquery-3.2.1.min.js", "js/content-script.js", "js/scraper-script.js"],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		"html/*",
		"css/*",
		"js/*"
	]
}
