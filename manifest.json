{
	"manifest_version": 2,
	
	"name": "Scraper Utiity",
	"description": "This extension extracts websites' data and pipes it to a database",
	"version": "0.0.1",
	
	"browser_action":{
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"activeTab"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["css/styles.css"],
			"js": ["js/jquery-3.2.1.min.js", "content-script.js"]
		}
	],
	"web_accessible_resources": [
		"html/*"
	]
}